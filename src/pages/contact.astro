---
import Layout from "../layouts/Layout.astro";
import Header from "../components/Header.astro";
import Footer from "../components/Footer.astro";
import Badge from "../components/ui/Badge.astro";
import Card from "../components/ui/Card.astro";
import CardContent from "../components/ui/CardContent.astro";

// SEO optimized page data
const pageTitle = "Contact Renata Horvat - Croatian Designer & Science Communication Expert";
const pageDescription = "Get in touch with Renata Horvat for your next design project. Specializing in academic websites, e-learning platforms, and scientific visual content. Based in Zagreb, Croatia.";
const pageKeywords = "contact Renata Horvat, Croatian designer, Zagreb designer, science communication expert, academic web design, e-learning consultant, instructional design services, research visualization, educational design Croatia";
---

<Layout 
  title={pageTitle} 
  description={pageDescription}
  keywords={pageKeywords}
>
  <Header />
  
  <main class="relative">
    <!-- SEO H1 tag for Contact page -->
    <h1 class="sr-only">Contact Renata Horvat - Croatian Designer & Science Communication Expert</h1>
    <!-- Space Background -->
    <div class="fixed inset-0 space-background">
      <!-- Stars -->
      <div class="absolute inset-0 space-stars-bg">
        <!-- Star 1 -->
        <svg class="absolute w-2 h-2 text-yellow-400/60 top-[10%] left-[20%]" fill="currentColor" viewBox="0 0 24 24">
          <path d="M12 2l3.09 6.26L22 9.27l-5 4.87 1.18 6.88L12 17.77l-6.18 3.25L7 14.14 2 9.27l6.91-1.01L12 2z"/>
        </svg>
        <!-- Star 2 -->
        <svg class="absolute w-3 h-3 text-yellow-300/80 top-[20%] right-[20%] -slow" fill="currentColor" viewBox="0 0 24 24">
          <path d="M12 2l3.09 6.26L22 9.27l-5 4.87 1.18 6.88L12 17.77l-6.18 3.25L7 14.14 2 9.27l6.91-1.01L12 2z"/>
        </svg>
        <!-- Star 3 -->
        <svg class="absolute w-1 h-1 text-yellow-500/40 top-[30%] left-[40%] -fast" fill="currentColor" viewBox="0 0 24 24">
          <path d="M12 2l3.09 6.26L22 9.27l-5 4.87 1.18 6.88L12 17.77l-6.18 3.25L7 14.14 2 9.27l6.91-1.01L12 2z"/>
        </svg>
        <!-- Star 4 -->
        <svg class="absolute w-4 h-4 text-yellow-200/90 top-[40%] left-[10%] " fill="currentColor" viewBox="0 0 24 24">
          <path d="M12 2l3.09 6.26L22 9.27l-5 4.87 1.18 6.88L12 17.77l-6.18 3.25L7 14.14 2 9.27l6.91-1.01L12 2z"/>
        </svg>
        <!-- Star 5 -->
        <svg class="absolute w-2 h-2 text-yellow-400/70 top-[50%] right-[30%] -slow" fill="currentColor" viewBox="0 0 24 24">
          <path d="M12 2l3.09 6.26L22 9.27l-5 4.87 1.18 6.88L12 17.77l-6.18 3.25L7 14.14 2 9.27l6.91-1.01L12 2z"/>
        </svg>
        <!-- Star 6 -->
        <svg class="absolute w-3 h-3 text-yellow-500/50 top-[60%] left-[30%] -fast" fill="currentColor" viewBox="0 0 24 24">
          <path d="M12 2l3.09 6.26L22 9.27l-5 4.87 1.18 6.88L12 17.77l-6.18 3.25L7 14.14 2 9.27l6.91-1.01L12 2z"/>
        </svg>
        <!-- Star 7 -->
        <svg class="absolute w-1 h-1 text-yellow-300/60 top-[70%] right-[10%] " fill="currentColor" viewBox="0 0 24 24">
          <path d="M12 2l3.09 6.26L22 9.27l-5 4.87 1.18 6.88L12 17.77l-6.18 3.25L7 14.14 2 9.27l6.91-1.01L12 2z"/>
        </svg>
        <!-- Star 8 -->
        <svg class="absolute w-2 h-2 text-yellow-400/80 top-[80%] left-[50%] -slow" fill="currentColor" viewBox="0 0 24 24">
          <path d="M12 2l3.09 6.26L22 9.27l-5 4.87 1.18 6.88L12 17.77l-6.18 3.25L7 14.14 2 9.27l6.91-1.01L12 2z"/>
        </svg>
        <!-- Star 9 -->
        <svg class="absolute w-3 h-3 text-yellow-300/70 top-[5%] left-[70%] -fast" fill="currentColor" viewBox="0 0 24 24">
          <path d="M12 2l3.09 6.26L22 9.27l-5 4.87 1.18 6.88L12 17.77l-6.18 3.25L7 14.14 2 9.27l6.91-1.01L12 2z"/>
        </svg>
        <!-- Star 10 -->
        <svg class="absolute w-1 h-1 text-yellow-500/50 top-[15%] left-[85%] -slow" fill="currentColor" viewBox="0 0 24 24">
          <path d="M12 2l3.09 6.26L22 9.27l-5 4.87 1.18 6.88L12 17.77l-6.18 3.25L7 14.14 2 9.27l6.91-1.01L12 2z"/>
        </svg>
        <!-- Star 11 -->
        <svg class="absolute w-2 h-2 text-yellow-400/60 top-[35%] right-[5%] " fill="currentColor" viewBox="0 0 24 24">
          <path d="M12 2l3.09 6.26L22 9.27l-5 4.87 1.18 6.88L12 17.77l-6.18 3.25L7 14.14 2 9.27l6.91-1.01L12 2z"/>
        </svg>
        <!-- Star 12 -->
        <svg class="absolute w-4 h-4 text-yellow-200/90 top-[55%] left-[75%] -slow" fill="currentColor" viewBox="0 0 24 24">
          <path d="M12 2l3.09 6.26L22 9.27l-5 4.87 1.18 6.88L12 17.77l-6.18 3.25L7 14.14 2 9.27l6.91-1.01L12 2z"/>
        </svg>
        <!-- Star 13 -->
        <svg class="absolute w-1 h-1 text-yellow-500/40 top-[75%] right-[45%] -fast" fill="currentColor" viewBox="0 0 24 24">
          <path d="M12 2l3.09 6.26L22 9.27l-5 4.87 1.18 6.88L12 17.77l-6.18 3.25L7 14.14 2 9.27l6.91-1.01L12 2z"/>
        </svg>
        <!-- Star 14 -->
        <svg class="absolute w-3 h-3 text-yellow-300/80 top-[25%] left-[60%] " fill="currentColor" viewBox="0 0 24 24">
          <path d="M12 2l3.09 6.26L22 9.27l-5 4.87 1.18 6.88L12 17.77l-6.18 3.25L7 14.14 2 9.27l6.91-1.01L12 2z"/>
        </svg>
        <!-- Star 15 -->
        <svg class="absolute w-2 h-2 text-yellow-400/70 top-[65%] left-[5%] -slow" fill="currentColor" viewBox="0 0 24 24">
          <path d="M12 2l3.09 6.26L22 9.27l-5 4.87 1.18 6.88L12 17.77l-6.18 3.25L7 14.14 2 9.27l6.91-1.01L12 2z"/>
        </svg>
        <!-- Star 16 -->
        <svg class="absolute w-1 h-1 text-yellow-500/60 top-[85%] right-[15%] -fast" fill="currentColor" viewBox="0 0 24 24">
          <path d="M12 2l3.09 6.26L22 9.27l-5 4.87 1.18 6.88L12 17.77l-6.18 3.25L7 14.14 2 9.27l6.91-1.01L12 2z"/>
        </svg>
        <!-- Star 17 -->
        <svg class="absolute w-3 h-3 text-yellow-300/50 top-[45%] left-[90%] " fill="currentColor" viewBox="0 0 24 24">
          <path d="M12 2l3.09 6.26L22 9.27l-5 4.87 1.18 6.88L12 17.77l-6.18 3.25L7 14.14 2 9.27l6.91-1.01L12 2z"/>
        </svg>
        <!-- Star 18 -->
        <svg class="absolute w-2 h-2 text-yellow-400/80 top-[95%] left-[25%] -slow" fill="currentColor" viewBox="0 0 24 24">
          <path d="M12 2l3.09 6.26L22 9.27l-5 4.87 1.18 6.88L12 17.77l-6.18 3.25L7 14.14 2 9.27l6.91-1.01L12 2z"/>
        </svg>
      </div>
      
      <!-- Nebula effect -->
      <div class="absolute inset-0 nebula-1"></div>
      <div class="absolute inset-0 nebula-2"></div>
      
      <!-- Rocket silhouette -->
      <div class="absolute top-1/4 right-1/4 rocket-silhouette">
        <svg class="w-16 h-16 text-white/5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="1" d="M12 2L13.5 8.5L20 9L13.5 9.5L12 16L10.5 9.5L4 9L10.5 8.5L12 2Z"/>
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="1" d="M10 16L8 20L12 18L16 20L14 16"/>
        </svg>
      </div>
      
      <!-- Second rocket silhouette -->
      <div class="absolute bottom-1/3 left-1/4 rocket-silhouette-2">
        <svg class="w-12 h-12 text-white/3" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="1" d="M12 2L13.5 8.5L20 9L13.5 9.5L12 16L10.5 9.5L4 9L10.5 8.5L12 2Z"/>
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="1" d="M10 16L8 20L12 18L16 20L14 16"/>
        </svg>
      </div>
    </div>
    
    <!-- Hero Section -->
    <section class="py-20 pb-8 bg-transparent relative z-10">
      <div class="relative max-w-6xl mx-auto px-6">
        <div class="mb-16">
          <!-- Badge with neon glow -->
          <div class="relative inline-block mb-6">
            <div class="absolute -inset-1 bg-gradient-to-r from-cyan-400 via-blue-500 to-purple-600 rounded-full blur opacity-25"></div>
            <Badge variant="default" class="relative bg-gray-900/80 border border-cyan-400/30 text-cyan-400 gap-2">
              <span class="w-2 h-2 bg-cyan-400 rounded-full"></span>
              Let's Connect
            </Badge>
          </div>
          
          <!-- Horizontal Layout: Text and Image -->
          <div class="flex flex-col lg:flex-row items-center justify-center gap-12 lg:gap-20 mb-12">
            <!-- Text Section -->
            <div class="text-center lg:text-left">
              <h1 class="text-4xl lg:text-6xl font-black text-white mb-4">
                <span class="bg-gradient-to-r from-cyan-400 via-blue-500 to-purple-600 bg-clip-text text-transparent">
                  Hi, I'm Renata
                </span>
              </h1>
            </div>
            
            <!-- Profile Image -->
            <div class="relative group">
              <!-- Static gradient border -->
              <div class="absolute -inset-2 rounded-full bg-gradient-to-r from-cyan-400 via-blue-500 via-purple-600 to-cyan-400 opacity-75 group-hover:opacity-100 transition-opacity duration-500"></div>
              
              <!-- Static glow effect -->
              <div class="absolute -inset-4 rounded-full bg-gradient-to-r from-cyan-400/30 via-blue-500/30 via-purple-600/30 to-cyan-400/30 blur-xl group-hover:blur-2xl transition-all duration-500"></div>
              
              <!-- Inner border -->
              <div class="absolute -inset-1 rounded-full bg-gradient-to-r from-white/20 via-white/10 to-white/20 backdrop-blur-sm"></div>
              
              <img
                src="/images/renatahorvat.jpg"
                alt="Renata Horvat - Designer & Digital Creator"
                width="200" height="200"
                class="relative w-32 h-32 lg:w-40 lg:h-40 rounded-full object-cover border-2 border-cyan-400/30 shadow-2xl group-hover:scale-105 transition-transform duration-500 z-10"
              />
            </div>
          </div>
          
          <!-- Stylized Text Section -->
          <div class="text-center space-y-6 max-w-4xl mx-auto">
            <p class="text-2xl lg:text-3xl text-gray-100 font-medium leading-relaxed">
              A designer and digital creator who turns knowledge into engaging visual stories.
            </p>
            
            <p class="text-xl lg:text-2xl text-gray-200 font-semibold">
              Tell me about your goals and timeline.
            </p>
            
            <div class="mt-8">
              <div class="relative inline-block">
                <div class="absolute -inset-1 bg-gradient-to-r from-cyan-400 via-blue-500 to-purple-600 rounded-2xl blur opacity-25"></div>
                <p class="relative text-xl lg:text-2xl text-white font-bold bg-gradient-to-r from-cyan-400/20 via-blue-500/20 to-purple-600/20 px-8 py-4 rounded-2xl border border-cyan-400/30 backdrop-blur-sm shadow-lg">
                  Let's create something amazing together.
                </p>
              </div>
            </div>
          </div>
        </div>
      </div>
    </section>

    <!-- Contact Info Section -->
    <section class="py-8 bg-transparent relative z-10">
      <div class="relative max-w-4xl mx-auto px-6">
        <div class="space-y-8">
          <!-- Top Row: Response Time and Free Consultation -->
          <div class="grid lg:grid-cols-2 gap-6">
            <!-- Response Time Card -->
            <div class="relative group h-full">
              <div class="absolute -inset-1 bg-gradient-to-r from-cyan-400 via-blue-500 to-purple-600 rounded-2xl blur opacity-25 group-hover:opacity-40 transition duration-1000 group-hover:duration-200"></div>
              <Card class="relative bg-gray-900/80 backdrop-blur-xl border border-cyan-400/30 rounded-2xl overflow-hidden h-full">
                <CardContent class="p-6 h-full flex flex-col">
                  <div class="flex items-start space-x-4 flex-grow">
                    <!-- Icon -->
                    <div class="relative">
                      <div class="w-12 h-12 bg-gradient-to-r from-cyan-400 to-blue-500 rounded-xl flex items-center justify-center text-white shadow-lg shadow-cyan-400/30">
                        <svg class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8v4l3 3m6-3a9 9 0 11-18 0 9 9 0 0118 0z"></path>
                        </svg>
                      </div>
                      <!-- Icon glow -->
                      <div class="absolute inset-0 w-12 h-12 bg-gradient-to-r from-cyan-400 to-blue-500 rounded-xl blur opacity-30"></div>
                    </div>
                    
                    <div class="flex-1">
                      <h3 class="text-xl font-bold bg-gradient-to-r from-cyan-400 to-blue-500 bg-clip-text text-transparent mb-2">
                        Response Time
                      </h3>
                      <p class="text-gray-100 mb-2 leading-relaxed">
                        Quick turnaround
                      </p>
                      <p class="text-gray-300 text-sm">
                        I typically respond within 24 hours, often much sooner.
                      </p>
                    </div>
                  </div>
                  
                  <!-- Decorative elements -->
                  <div class="absolute top-4 right-4 w-6 h-6 border-t-2 border-r-2 border-cyan-400/30 rounded-tr-lg"></div>
                  <div class="absolute bottom-4 left-4 w-6 h-6 border-b-2 border-l-2 border-cyan-400/30 rounded-bl-lg"></div>
                </CardContent>
              </Card>
            </div>

            <!-- Free Consultation Card -->
            <div class="relative group h-full">
              <div class="absolute -inset-1 bg-gradient-to-r from-cyan-400 via-blue-500 to-purple-600 rounded-2xl blur opacity-25 group-hover:opacity-40 transition duration-1000 group-hover:duration-200"></div>
              <Card class="relative bg-gray-900/80 backdrop-blur-xl border border-cyan-400/30 rounded-2xl overflow-hidden h-full">
                <CardContent class="p-6 h-full flex flex-col">
                  <div class="flex items-start space-x-4 flex-grow">
                    <!-- Icon -->
                    <div class="relative">
                      <div class="w-12 h-12 bg-gradient-to-r from-cyan-400 to-blue-500 rounded-xl flex items-center justify-center text-white shadow-lg shadow-cyan-400/30">
                        <svg class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2 4-4m6 2a9 9 0 11-18 0 9 9 0 0118 0z"></path>
                        </svg>
                      </div>
                      <!-- Icon glow -->
                      <div class="absolute inset-0 w-12 h-12 bg-gradient-to-r from-cyan-400 to-blue-500 rounded-xl blur opacity-30"></div>
                    </div>
                    
                    <div class="flex-1">
                      <h3 class="text-xl font-bold bg-gradient-to-r from-cyan-400 to-blue-500 bg-clip-text text-transparent mb-2">
                        Free Consultation
                      </h3>
                      <p class="text-gray-100 mb-2 leading-relaxed">
                        Let's discuss your project
                      </p>
                      <p class="text-gray-300 text-sm">
                        Initial consultation is always free. No strings attached.
                      </p>
                    </div>
                  </div>
                  
                  <!-- Decorative elements -->
                  <div class="absolute top-4 right-4 w-6 h-6 border-t-2 border-r-2 border-cyan-400/30 rounded-tr-lg"></div>
                  <div class="absolute bottom-4 left-4 w-6 h-6 border-b-2 border-l-2 border-cyan-400/30 rounded-bl-lg"></div>
                </CardContent>
              </Card>
            </div>
          </div>

          <!-- Bottom Row: Email Card -->
          <div class="flex justify-center">
            <div class="relative group h-full max-w-md">
              <div class="absolute -inset-1 bg-gradient-to-r from-cyan-400 via-blue-500 to-purple-600 rounded-2xl blur opacity-25 group-hover:opacity-40 transition duration-1000 group-hover:duration-200"></div>
              <Card class="relative bg-gray-900/80 backdrop-blur-xl border border-cyan-400/30 rounded-2xl overflow-hidden h-full">
                <CardContent class="p-6 h-full flex flex-col">
                  <div class="flex items-start space-x-4 flex-grow">
                    <!-- Icon -->
                    <div class="relative">
                      <div class="w-12 h-12 bg-gradient-to-r from-cyan-400 to-blue-500 rounded-xl flex items-center justify-center text-white shadow-lg shadow-cyan-400/30">
                        <svg class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M16 12a4 4 0 10-8 0 4 4 0 008 0zm0 0v1.5a2.5 2.5 0 005 0V12a9 9 0 10-9 9m4.5-1.206a8.959 8.959 0 01-4.5 1.207"></path>
                        </svg>
                      </div>
                      <!-- Icon glow -->
                      <div class="absolute inset-0 w-12 h-12 bg-gradient-to-r from-cyan-400 to-blue-500 rounded-xl blur opacity-30"></div>
                    </div>
                    
                    <div class="flex-1">
                      <h3 class="text-xl font-bold bg-gradient-to-r from-cyan-400 to-blue-500 bg-clip-text text-transparent mb-2">
                        Email
                      </h3>
                      <p class="text-gray-100 mb-2 leading-relaxed">
                        Ready to start your project?
                      </p>
                      <p class="text-gray-300 text-sm mb-4">
                        Get in touch and let's discuss your ideas.
                      </p>
                    </div>
                  </div>
                  
                  <!-- CTA link -->
                  <div class="flex justify-end mt-auto">
                    <a 
                      href="mailto:screatives.info@gmail.com" 
                      class="inline-flex items-center px-4 py-2 bg-gradient-to-r from-cyan-400/20 to-blue-500/20 border border-cyan-400/30 text-cyan-400 font-medium rounded-lg hover:from-cyan-400/30 hover:to-blue-500/30 transition-all duration-300"
                      onclick="gtag('event', 'contact_click', { contact_method: 'email', contact_type: 'portfolio_inquiry' })"
                    >
                      Contact Me
                      <svg class="w-4 h-4 ml-1" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 8l4 4m0 0l-4 4m4-4H3"></path>
                      </svg>
                    </a>
                  </div>
                  
                  <!-- Decorative elements -->
                  <div class="absolute top-4 right-4 w-6 h-6 border-t-2 border-r-2 border-cyan-400/30 rounded-tr-lg"></div>
                  <div class="absolute bottom-4 left-4 w-6 h-6 border-b-2 border-l-2 border-cyan-400/30 rounded-bl-lg"></div>
                </CardContent>
              </Card>
            </div>
          </div>
        </div>
      </div>
    </section>
  </main>

  <Footer />
</Layout>
