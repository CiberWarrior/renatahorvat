---
import Layout from "../layouts/Layout.astro";
import Header from "../components/Header.astro";
import Footer from "../components/Footer.astro";
import Badge from "../components/ui/Badge.astro";
import { projects } from "../lib/projects";
import ProjectCard from "../components/ProjectCard.astro";

// SEO optimized page data
const pageTitle = "Portfolio by Renata Horvat - E-learning & Academic Web Design | Croatia";
const pageDescription = "Explore my portfolio of e-learning platforms, academic websites, and scientific content for universities and research institutions. 20+ years of experience in educational design.";
const pageKeywords = "Renata Horvat portfolio, e-learning design, academic websites, scientific design, university websites, research communication, Croatia designer, Zagreb web design, educational platforms";

// Filter projects with links only
const portfolioProjects = projects.filter(p => p.href && p.href.trim() !== "");

// Structured data for portfolio page
const portfolioStructuredData = {
  "@context": "https://schema.org",
  "@type": "CollectionPage",
  "name": "Renata Horvat Portfolio",
  "description": pageDescription,
  "url": "https://renatahorvat.com/services",
  "mainEntity": {
    "@type": "ItemList",
    "itemListElement": portfolioProjects.slice(0, 10).map((project, index) => ({
      "@type": "ListItem",
      "position": index + 1,
      "item": {
        "@type": "CreativeWork",
        "name": project.title,
        "description": project.summary,
        "url": project.href || undefined
      }
    }))
  }
};

const breadcrumbStructuredData = {
  "@context": "https://schema.org",
  "@type": "BreadcrumbList",
  "itemListElement": [
    {
      "@type": "ListItem",
      "position": 1,
      "name": "Home",
      "item": "https://renatahorvat.com"
    },
    {
      "@type": "ListItem",
      "position": 2,
      "name": "Portfolio",
      "item": "https://renatahorvat.com/services"
    }
  ]
};

// Group projects by category
const eLearningProjects = portfolioProjects.filter(p => 
  p.title.toLowerCase().includes('e-book') || 
  p.title.toLowerCase().includes('textbook')
);

const societyProjects = portfolioProjects.filter(p => 
  p.title.toLowerCase().includes('society') || 
  p.title.toLowerCase().includes('federation') ||
  p.title.toLowerCase().includes('collection')
);

const conferenceProjects = portfolioProjects.filter(p => 
  p.title.toLowerCase().includes('conference') || 
  p.title.toLowerCase().includes('symposium') ||
  p.title.toLowerCase().includes('congress') ||
  p.title.toLowerCase().includes('olympiad') ||
  p.title.toLowerCase().includes('meeting')
);

const otherProjects = portfolioProjects.filter(p => 
  !eLearningProjects.includes(p) && 
  !societyProjects.includes(p) && 
  !conferenceProjects.includes(p)
);
---
<Layout 
  title={pageTitle} 
  description={pageDescription}
  keywords={pageKeywords}
  structuredData={[portfolioStructuredData, breadcrumbStructuredData]}
  breadcrumbs={[
    { name: "Home", url: "https://renatahorvat.com" },
    { name: "Portfolio", url: "https://renatahorvat.com/services" }
  ]}
>
  <Header />
  <main>
    <!-- Hero Section -->
    <section class="relative py-20 bg-transparent overflow-hidden">
      <div class="absolute inset-0">
        <div class="absolute inset-0 bg-gradient-to-br from-gray-900/50 via-gray-800/30 to-gray-900/50"></div>
        <div class="absolute inset-0 opacity-10">
          <div class="absolute inset-0" style="background-image: radial-gradient(circle at 1px 1px, rgba(6, 182, 212, 0.3) 1px, transparent 0); background-size: 20px 20px;"></div>
        </div>
      </div>
      
      <div class="relative max-w-7xl mx-auto px-6">
        <div class="max-w-4xl mx-auto text-center">
          <Badge variant="default" class="gap-2 mb-6">
            <span class="w-2 h-2 bg-cyan-400 rounded-full"></span>
            Portfolio
          </Badge>
          
          <h1 class="text-4xl lg:text-6xl font-black text-white mb-6">
            <span class="bg-gradient-to-r from-cyan-400 via-blue-500 to-purple-600 bg-clip-text text-transparent">
              My Work & Approach
            </span>
          </h1>
          
          <p class="text-xl text-gray-300 leading-relaxed mb-6">
            I specialize in creating <span class="text-cyan-400 font-semibold">fast, modern, and accessible</span> digital experiences for academic institutions.
          </p>
          
          <div class="max-w-3xl mx-auto space-y-4 text-left bg-gray-900/60 border border-cyan-400/20 rounded-2xl p-8">
            <h2 class="text-2xl font-bold text-cyan-400 mb-4">My Process</h2>
            <div class="space-y-3 text-gray-300">
              <p><span class="text-cyan-400 font-bold">1. Discovery</span> — Understanding your goals, audience, and content</p>
              <p><span class="text-cyan-400 font-bold">2. Design</span> — Creating modern, user-friendly interfaces</p>
              <p><span class="text-cyan-400 font-bold">3. Development</span> — Building fast, performant platforms</p>
              <p><span class="text-cyan-400 font-bold">4. Launch & Support</span> — Deployment, training, and ongoing maintenance</p>
            </div>
          </div>
        </div>
      </div>
    </section>

    <!-- E-Learning Platforms -->
    {eLearningProjects.length > 0 && (
      <section class="py-16 bg-transparent">
        <div class="relative max-w-7xl mx-auto px-6">
          <div class="mb-12">
            <h2 class="text-3xl lg:text-4xl font-black text-white mb-3">
              <span class="bg-gradient-to-r from-blue-400 to-purple-500 bg-clip-text text-transparent">
                E-Learning Platforms
              </span>
            </h2>
            <p class="text-gray-400 text-lg">Interactive digital textbooks and educational content</p>
          </div>
          
          <div class="grid md:grid-cols-2 gap-8">
            {eLearningProjects.map((project) => (
              <ProjectCard {...project} />
            ))}
          </div>
        </div>
      </section>
    )}

    <!-- Academic Societies & Organizations -->
    {societyProjects.length > 0 && (
      <section class="py-16 bg-transparent">
        <div class="relative max-w-7xl mx-auto px-6">
          <div class="mb-12">
            <h2 class="text-3xl lg:text-4xl font-black text-white mb-3">
              <span class="bg-gradient-to-r from-cyan-400 to-blue-500 bg-clip-text text-transparent">
                Academic Societies & Organizations
              </span>
            </h2>
            <p class="text-gray-400 text-lg">Websites for scientific societies and research institutions</p>
          </div>
          
          <div class="grid md:grid-cols-2 gap-8">
            {societyProjects.map((project) => (
              <ProjectCard {...project} />
            ))}
          </div>
        </div>
      </section>
    )}

    <!-- Conferences & Events -->
    {conferenceProjects.length > 0 && (
      <section class="py-16 bg-transparent">
        <div class="relative max-w-7xl mx-auto px-6">
          <div class="mb-12">
            <h2 class="text-3xl lg:text-4xl font-black text-white mb-3">
              <span class="bg-gradient-to-r from-purple-400 to-pink-500 bg-clip-text text-transparent">
                Conferences & Scientific Events
              </span>
            </h2>
            <p class="text-gray-400 text-lg">Event websites with registration, programs, and schedules</p>
          </div>
          
          <div class="grid md:grid-cols-2 gap-8">
            {conferenceProjects.map((project) => (
              <ProjectCard {...project} />
            ))}
          </div>
        </div>
      </section>
    )}

    <!-- Other Projects -->
    {otherProjects.length > 0 && (
      <section class="py-16 bg-transparent">
        <div class="relative max-w-7xl mx-auto px-6">
          <div class="mb-12">
            <h2 class="text-3xl lg:text-4xl font-black text-white mb-3">
              <span class="bg-gradient-to-r from-green-400 to-teal-500 bg-clip-text text-transparent">
                Other Projects
              </span>
            </h2>
            <p class="text-gray-400 text-lg">Specialized websites and custom solutions</p>
          </div>
          
          <div class="grid md:grid-cols-2 gap-8">
            {otherProjects.map((project) => (
              <ProjectCard {...project} />
            ))}
          </div>
        </div>
      </section>
    )}

    <!-- CTA Section -->
    <section class="py-20 bg-transparent">
      <div class="relative max-w-4xl mx-auto px-6">
        <div class="relative group">
          <div class="absolute -inset-1 bg-gradient-to-r from-cyan-400 via-blue-500 to-purple-600 rounded-2xl blur opacity-25 group-hover:opacity-40 transition duration-500"></div>
          <div class="relative bg-gray-900/80 backdrop-blur-sm border border-cyan-400/30 rounded-2xl p-12 text-center">
            <h2 class="text-3xl lg:text-4xl font-black text-white mb-4">
              Ready to Start Your Project?
            </h2>
            <p class="text-xl text-gray-300 mb-8 max-w-2xl mx-auto">
              Let's discuss how I can help bring your educational content to life with modern, fast, and engaging digital experiences.
            </p>
            <a 
              href="/contact" 
              class="inline-block px-8 py-4 bg-gradient-to-r from-cyan-500 to-blue-600 text-white font-bold text-lg rounded-2xl hover:from-cyan-600 hover:to-blue-700 transition-all duration-300 transform hover:scale-105 focus:outline-none focus:ring-2 focus:ring-cyan-400 focus:ring-offset-2 focus:ring-offset-gray-900"
            >
              Get In Touch
            </a>
          </div>
        </div>
      </div>
    </section>
  </main>
  <Footer />
</Layout>
