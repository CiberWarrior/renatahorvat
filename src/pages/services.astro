---
import Layout from "../layouts/Layout.astro";
import Header from "../components/Header.astro";
import Footer from "../components/Footer.astro";
import Services from "../components/Services.astro";
import Badge from "../components/ui/Badge.astro";
import { projects } from "../lib/projects";
import ProjectCard from "../components/ProjectCard.astro";
---
<Layout title="Services â€” Renata Horvat" description="Discover my services and see examples of my work">
  <Header />
  <main>
    <Services />
    
    <!-- Portfolio Section -->
    <section class="py-20 bg-transparent">
      <div class="relative max-w-7xl mx-auto px-6">
        <div class="text-center mb-16">
          <Badge variant="default" class="gap-2 mb-6">
            <span class="w-2 h-2 bg-primary rounded-full"></span>
            Portfolio
          </Badge>
          <h2 class="text-4xl lg:text-5xl font-black text-white mb-4">
            <span class="bg-gradient-to-r from-blue-400 via-teal-400 to-blue-400 bg-clip-text text-transparent">
              My Work
            </span>
          </h2>
          <p class="text-lg text-white/80 max-w-2xl mx-auto">
            A showcase of projects that demonstrate my approach to design and development
          </p>
        </div>
        
        <div class="grid md:grid-cols-2 gap-8">
          {projects.map((project) => (
            <ProjectCard {...project} />
          ))}
        </div>
      </div>
    </section>
  </main>
  <Footer />
</Layout>
