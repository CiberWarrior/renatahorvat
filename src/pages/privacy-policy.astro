---
import Layout from '../layouts/Layout.astro';
import Header from '../components/Header.astro';
import Footer from '../components/Footer.astro';

const pageTitle = 'Privacy Policy | Renata Horvat';
const pageDescription = 'Privacy Policy for renatahorvat.com - Learn how we collect, use, and protect your personal information.';
const lastUpdated = 'January 8, 2026';
---

<Layout title={pageTitle} description={pageDescription}>
  <Header />
  <main class="py-20 bg-transparent">
    <div class="max-w-4xl mx-auto px-6">
      <!-- Header -->
      <div class="text-center mb-12">
        <h1 class="text-4xl lg:text-5xl font-black text-white mb-4">
          <span class="bg-gradient-to-r from-cyan-400 via-blue-500 to-purple-600 bg-clip-text text-transparent">
            Privacy Policy
          </span>
        </h1>
        <p class="text-gray-400 text-sm">
          Last Updated: <span class="text-cyan-400">{lastUpdated}</span>
        </p>
      </div>

      <!-- Content -->
      <div class="prose prose-invert prose-lg max-w-none">
        <div class="bg-gray-900/60 border border-cyan-400/20 rounded-2xl p-8 mb-8">
          <p class="text-gray-300 leading-relaxed mb-0">
            This Privacy Policy describes how Renata Horvat ("we", "us", or "our") collects, uses, and protects your personal information when you visit renatahorvat.com (the "Website").
          </p>
        </div>

        <!-- 1. Information We Collect -->
        <section class="mb-12">
          <h2 class="text-2xl font-bold text-white mb-4 flex items-center gap-3">
            <span class="w-8 h-8 bg-gradient-to-r from-cyan-400 to-blue-500 rounded-lg flex items-center justify-center text-sm">1</span>
            Information We Collect
          </h2>
          <div class="bg-gray-900/40 border border-gray-700/30 rounded-xl p-6">
            <!-- Information provided directly -->
            <div class="mb-6">
              <h3 class="text-lg font-semibold text-white mb-3">Information Provided Directly</h3>
              <p class="text-gray-300 leading-relaxed mb-2">
                When you contact us or request a quote, we collect:
              </p>
              <ul class="list-disc list-inside text-gray-300 space-y-2 ml-4">
                <li>Name</li>
                <li>Email address</li>
                <li>Project data and details shared in your inquiry</li>
              </ul>
            </div>

            <!-- Legal basis for processing -->
            <div class="mb-6">
              <h3 class="text-lg font-semibold text-white mb-3">Legal Basis for Processing</h3>
              <ul class="list-disc list-inside text-gray-300 space-y-2 ml-4">
                <li><strong class="text-white">Legitimate interest:</strong> To respond to your inquiries and improve our services</li>
                <li><strong class="text-white">Contractual necessity:</strong> To provide quotes and fulfill service agreements</li>
              </ul>
            </div>

            <!-- Automatically collected info -->
            <div>
              <h3 class="text-lg font-semibold text-white mb-3">Automatically Collected Information</h3>
              <p class="text-gray-300 leading-relaxed mb-2">
                When you visit our Website, we automatically collect certain information through analytics:
              </p>
              <ul class="list-disc list-inside text-gray-300 space-y-2 ml-4">
                <li>Page views and website usage data</li>
                <li>Browser type and device information</li>
                <li>Geographic location (city/country level)</li>
              </ul>
            </div>
          </div>
        </section>

        <!-- 2. How We Use Your Information -->
        <section class="mb-12">
          <h2 class="text-2xl font-bold text-white mb-4 flex items-center gap-3">
            <span class="w-8 h-8 bg-gradient-to-r from-blue-500 to-purple-600 rounded-lg flex items-center justify-center text-sm">2</span>
            How We Use Your Information
          </h2>
          <div class="bg-gray-900/40 border border-gray-700/30 rounded-xl p-6">
            <p class="text-gray-300 leading-relaxed mb-4">
              We use the collected information to:
            </p>
            <ul class="list-disc list-inside text-gray-300 space-y-2 ml-4">
              <li>Improve website content and user experience</li>
              <li>Analyze website traffic and performance</li>
              <li>Respond to your inquiries</li>
              <li>Comply with legal requirements</li>
            </ul>
          </div>
        </section>

        <!-- 3. Cookies -->
        <section class="mb-12">
          <h2 class="text-2xl font-bold text-white mb-4 flex items-center gap-3">
            <span class="w-8 h-8 bg-gradient-to-r from-purple-600 to-pink-500 rounded-lg flex items-center justify-center text-sm">3</span>
            Cookies
          </h2>
          <div class="bg-gray-900/40 border border-gray-700/30 rounded-xl p-6">
            <p class="text-gray-300 leading-relaxed mb-4">
              We use Google Analytics to understand how visitors interact with our website. This service uses cookies to collect anonymous usage data.
            </p>
            <div class="p-4 bg-purple-500/10 border border-purple-500/20 rounded-lg">
              <p class="text-gray-300 text-sm">
                <strong class="text-purple-400">üç™ Cookie Consent:</strong> You can manage your cookie preferences using the cookie banner or by clicking "Cookie Settings" in the footer.
              </p>
            </div>
          </div>
        </section>

        <!-- 4. Third-Party Services -->
        <section class="mb-12">
          <h2 class="text-2xl font-bold text-white mb-4 flex items-center gap-3">
            <span class="w-8 h-8 bg-gradient-to-r from-green-500 to-teal-500 rounded-lg flex items-center justify-center text-sm">4</span>
            Third-Party Services
          </h2>
          <div class="bg-gray-900/40 border border-gray-700/30 rounded-xl p-6">
            <p class="text-gray-300 leading-relaxed mb-4">
              Our Website uses the following third-party services:
            </p>
            <ul class="space-y-3">
              <li class="flex items-start gap-3">
                <span class="text-cyan-400 text-xl">‚Ä¢</span>
                <div>
                  <strong class="text-white">Google Analytics:</strong>
                  <span class="text-gray-300"> Website analytics provided by Google LLC. </span>
                  <a href="https://policies.google.com/privacy" target="_blank" rel="noopener noreferrer" class="text-cyan-400 hover:text-cyan-300 underline">Privacy Policy</a>
                </div>
              </li>
            </ul>
          </div>
        </section>

        <!-- 5. Your Rights (GDPR) -->
        <section class="mb-12">
          <h2 class="text-2xl font-bold text-white mb-4 flex items-center gap-3">
            <span class="w-8 h-8 bg-gradient-to-r from-pink-500 to-red-500 rounded-lg flex items-center justify-center text-sm">5</span>
            Your Rights
          </h2>
          <div class="bg-gray-900/40 border border-gray-700/30 rounded-xl p-6">
            <p class="text-gray-300 leading-relaxed mb-4">
              Under GDPR and Croatian law, you have the right to:
            </p>
            <ul class="space-y-3 text-gray-300">
              <li class="flex items-start gap-3">
                <span class="text-cyan-400 font-bold min-w-[24px]">‚úì</span>
                <div>Access, correct, or delete your personal data</div>
              </li>
              <li class="flex items-start gap-3">
                <span class="text-cyan-400 font-bold min-w-[24px]">‚úì</span>
                <div>Object to or restrict data processing</div>
              </li>
              <li class="flex items-start gap-3">
                <span class="text-cyan-400 font-bold min-w-[24px]">‚úì</span>
                <div>Request data portability</div>
              </li>
              <li class="flex items-start gap-3">
                <span class="text-cyan-400 font-bold min-w-[24px]">‚úì</span>
                <div>Withdraw consent at any time</div>
              </li>
            </ul>
            <div class="mt-6 p-4 bg-cyan-500/10 border border-cyan-500/20 rounded-lg">
              <p class="text-gray-300 text-sm">
                To exercise any of these rights, contact us at: 
                <a href="mailto:screatives.info@gmail.com" class="text-cyan-400 hover:text-cyan-300 font-semibold">screatives.info@gmail.com</a>
              </p>
            </div>
          </div>
        </section>

        <!-- 6. Data Security -->
        <section class="mb-12">
          <h2 class="text-2xl font-bold text-white mb-4 flex items-center gap-3">
            <span class="w-8 h-8 bg-gradient-to-r from-amber-500 to-orange-500 rounded-lg flex items-center justify-center text-sm">6</span>
            Data Security
          </h2>
          <div class="bg-gray-900/40 border border-gray-700/30 rounded-xl p-6">
            <p class="text-gray-300 leading-relaxed">
              We implement appropriate security measures to protect your personal information, including HTTPS encryption and secure hosting infrastructure.
            </p>
          </div>
        </section>

        <!-- 7. Changes to This Policy -->
        <section class="mb-12">
          <h2 class="text-2xl font-bold text-white mb-4 flex items-center gap-3">
            <span class="w-8 h-8 bg-gradient-to-r from-indigo-500 to-violet-500 rounded-lg flex items-center justify-center text-sm">7</span>
            Changes to This Policy
          </h2>
          <div class="bg-gray-900/40 border border-gray-700/30 rounded-xl p-6">
            <p class="text-gray-300 leading-relaxed">
              We may update this Privacy Policy from time to time. Changes will be posted on this page with an updated date.
            </p>
          </div>
        </section>

        <!-- 8. Contact -->
        <section class="mb-12">
          <h2 class="text-2xl font-bold text-white mb-4 flex items-center gap-3">
            <span class="w-8 h-8 bg-gradient-to-r from-fuchsia-500 to-purple-500 rounded-lg flex items-center justify-center text-sm">8</span>
            Contact
          </h2>
          <div class="bg-gradient-to-r from-cyan-500/10 to-blue-500/10 border border-cyan-400/30 rounded-xl p-8">
            <p class="text-gray-300 leading-relaxed mb-4">
              If you have any questions about this Privacy Policy, please contact us:
            </p>
            <div class="space-y-2 text-white">
              <p><strong>Email:</strong> <a href="mailto:screatives.info@gmail.com" class="text-cyan-400 hover:text-cyan-300">screatives.info@gmail.com</a></p>
              <p><strong>Location:</strong> Zagreb, Croatia</p>
            </div>
          </div>
        </section>

        <!-- Bottom CTA -->
        <div class="mt-12 text-center">
          <a href="/contact" class="inline-flex items-center px-8 py-4 bg-gradient-to-r from-cyan-500 to-blue-600 text-white font-semibold rounded-2xl hover:from-cyan-600 hover:to-blue-700 transition-all duration-300 transform hover:scale-105">
            <span>Have Questions? Contact Me</span>
            <svg class="ml-2 w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 8l4 4m0 0l-4 4m4-4H3"></path>
            </svg>
          </a>
        </div>
      </div>
    </div>
  </main>
  <Footer />
</Layout>

<style>
  .prose {
    max-width: none;
  }
  
  .prose h2 {
    margin-top: 2rem;
    margin-bottom: 1rem;
  }
  
  .prose p {
    margin-bottom: 1rem;
  }
  
  .prose ul {
    margin-top: 0.5rem;
    margin-bottom: 1rem;
  }
  
  .prose li {
    margin-bottom: 0.5rem;
  }
</style>
