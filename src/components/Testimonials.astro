---
import Card from './ui/Card.astro';
import CardContent from './ui/CardContent.astro';
import Badge from './ui/Badge.astro';

const testimonials = [
  {
    text: "She understood our content and audience better than we did. The final website was not only functional, but truly beautiful.",
    author: "Marko V.",
    role: "Conference Organizer",
    avatar: "MV"
  },
  {
    text: "We needed someone who speaks both 'design' and 'science' – and she delivered perfectly.",
    author: "Ivana M.",
    role: "Educational Content Lead",
    avatar: "IM"
  },
  {
    text: "A rare mix of creativity and precision. She helped us rethink how we present our materials.",
    author: "Jelena D.",
    role: "Editor of Scientific Materials",
    avatar: "JD"
  }
];
---

<section class="py-20 bg-transparent">
  
  <div class="relative max-w-6xl mx-auto px-6">
    <div class="text-center mb-16">
      <Badge variant="default" class="gap-2 mb-6">
        <span class="w-2 h-2 bg-green-500 rounded-full"></span>
        Client Testimonials
      </Badge>
      <h2 class="text-4xl lg:text-6xl font-black text-white mb-4">
        What Clients
        <span class="block bg-gradient-to-r from-blue-400 via-teal-400 to-blue-400 bg-clip-text text-transparent">
          Say
        </span>
      </h2>
      <p class="text-lg text-gray-300 max-w-2xl mx-auto">
        Real feedback from real projects that made a difference
      </p>
    </div>
    
    <div class="grid md:grid-cols-3 gap-8">
      {testimonials.map((testimonial, index) => (
        <Card class="bg-white/5 backdrop-blur-xl border border-white/10 hover:bg-white/10 hover:border-white/20 transition-all duration-500 shadow-2xl">
          <CardContent class="p-6 text-center">
            <div class="w-16 h-16 bg-gradient-to-r from-blue-500 to-teal-500 rounded-full flex items-center justify-center text-white font-bold mx-auto mb-4">
              {testimonial.avatar}
            </div>
            <blockquote class="text-lg text-white/90 mb-6 leading-relaxed font-medium">
              "{testimonial.text}"
            </blockquote>
            <div class="border-t border-white/20 pt-4">
              <p class="font-semibold text-white">{testimonial.author}</p>
              <p class="text-white/70 text-sm">{testimonial.role}</p>
            </div>
          </CardContent>
        </Card>
      ))}
    </div>
    
    <!-- Bottom stats -->
    <div class="mt-16 grid grid-cols-1 md:grid-cols-3 gap-6">
      <Card class="bg-white/5 backdrop-blur-xl border border-white/10 hover:bg-white/10 hover:border-white/20 transition-all duration-500 shadow-2xl">
        <CardContent class="p-6 text-center">
          <div class="text-3xl font-black text-blue-400 mb-2">100%</div>
          <div class="text-white/70">Client Satisfaction</div>
        </CardContent>
      </Card>
      <Card class="bg-white/5 backdrop-blur-xl border border-white/10 hover:bg-white/10 hover:border-white/20 transition-all duration-500 shadow-2xl">
        <CardContent class="p-6 text-center">
          <div class="text-3xl font-black text-teal-400 mb-2">50+</div>
          <div class="text-white/70">Projects Completed</div>
        </CardContent>
      </Card>
      <Card class="bg-white/5 backdrop-blur-xl border border-white/10 hover:bg-white/10 hover:border-white/20 transition-all duration-500 shadow-2xl">
        <CardContent class="p-6 text-center">
          <div class="text-3xl font-black text-blue-400 mb-2">5★</div>
          <div class="text-white/70">Average Rating</div>
        </CardContent>
      </Card>
    </div>
  </div>
</section>
