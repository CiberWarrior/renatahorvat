---
import Card from './ui/Card.astro';
import CardContent from './ui/CardContent.astro';
import Badge from './ui/Badge.astro';
import Button from './ui/Button.astro';

const services = [
  {
    title: "Intelligent Design for Digital Education",
    description: "I create interactive learning content – from digital textbooks to multimedia modules – tailored for modern e-learning platforms.",
    details: "Creating engaging educational experiences that make learning accessible and effective for all audiences.",
    icon: "book",
    results: "+40% engagement, -60% loading time"
  },
  {
    title: "Websites for Conferences",
    description: "I design custom websites for academic and scientific events, combining clarity, structure, and seamless user experience.",
    details: "Professional event websites that showcase information clearly and facilitate smooth user interactions.",
    icon: "globe",
    results: "+200% registrations, 95% satisfaction"
  },
  {
    title: "Educational Visuals",
    description: "Infographics, diagrams, and visuals that make complex topics simple, structured, and easy to understand.",
    details: "Transforming complex information into clear, visually appealing content that enhances comprehension.",
    icon: "palette",
    results: "+80% comprehension, -50% support tickets"
  },
  {
    title: "Business Automation",
    description: "I build smart digital tools and automations that reduce manual work and support productivity, so you can focus on what really matters.",
    details: "Implementing intelligent solutions that optimize business processes and enhance operational efficiency.",
    icon: "zap",
    results: "-70% manual tasks, +300% productivity"
  }
];

// SVG icon components
const icons = {
  book: `<svg class="w-7 h-7" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 6.253v13m0-13C10.832 5.477 9.246 5 7.5 5S4.168 5.477 3 6.253v13C4.168 18.477 5.754 18 7.5 18s3.332.477 4.5 1.253m0-13C13.168 5.477 14.754 5 16.5 5c1.746 0 3.332.477 4.5 1.253v13C19.832 18.477 18.246 18 16.5 18c-1.746 0-3.332.477-4.5 1.253"></path></svg>`,
  globe: `<svg class="w-7 h-7" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M21 12a9 9 0 01-9 9m9-9a9 9 0 00-9-9m9 9H3m9 9a9 9 0 01-9-9m9 9c1.657 0 3-4.03 3-9s-1.343-9-3-9m0 18c-1.657 0-3-4.03-3-9s1.343-9 3-9m-9 9a9 9 0 019-9"></path></svg>`,
  palette: `<svg class="w-7 h-7" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M7 21a4 4 0 01-4-4V5a2 2 0 012-2h4a2 2 0 012 2v12a4 4 0 01-4 4zM7 3H5a2 2 0 00-2 2v12a4 4 0 004 4h2M7 3h10a2 2 0 012 2v12a4 4 0 01-4 4H7M7 3v18"></path></svg>`,
  zap: `<svg class="w-7 h-7" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 10V3L4 14h7v7l9-11h-7z"></path></svg>`
};
---

<section class="py-20 bg-transparent">
  
  <div class="relative max-w-7xl mx-auto px-6">
    <div class="text-center mb-16">
      <Badge variant="default" class="gap-2 mb-6">
        <span class="w-2 h-2 bg-primary rounded-full"></span>
        What I Do
      </Badge>
      <h2 class="text-4xl lg:text-5xl font-black text-white mb-4">
        <span class="bg-gradient-to-r from-purple-400 via-pink-400 to-blue-400 bg-clip-text text-transparent">
          What I Do
        </span>
      </h2>
      <p class="text-lg text-gray-300 max-w-2xl mx-auto">
        Transforming complex ideas into intuitive, visually appealing experiences
      </p>
    </div>
    
    <div class="grid md:grid-cols-2 gap-8">
      {services.map((service, index) => (
        <div class="relative group">
          <!-- Neon glow effect -->
          <div class="absolute -inset-1 bg-gradient-to-r from-cyan-400 via-blue-500 to-purple-600 rounded-2xl blur opacity-25 group-hover:opacity-40 transition duration-1000 group-hover:duration-200"></div>
          
          <!-- Main card -->
          <Card class="relative bg-gray-900/80 backdrop-blur-xl border border-cyan-400/30 rounded-2xl overflow-hidden h-full">
            <CardContent class="p-8 h-full flex flex-col">
              <div class="text-center flex-grow">
                <!-- Icon with neon effect -->
                <div class="relative mb-6">
                  <div class="w-20 h-20 bg-gradient-to-r from-cyan-400 to-blue-500 rounded-2xl flex items-center justify-center text-white mx-auto shadow-lg shadow-cyan-400/30">
                    <Fragment set:html={icons[service.icon]} />
                  </div>
                  <!-- Icon glow -->
                  <div class="absolute inset-0 w-20 h-20 bg-gradient-to-r from-cyan-400 to-blue-500 rounded-2xl blur opacity-30 mx-auto"></div>
                </div>
                
                <!-- Title -->
                <h3 class="text-2xl font-bold bg-gradient-to-r from-cyan-400 to-blue-500 bg-clip-text text-transparent mb-4">
                  {service.title}
                </h3>
                
                <!-- Description -->
                <p class="text-gray-100 text-lg leading-relaxed mb-6">
                  {service.description}
                </p>
                
                <!-- Results badge -->
                <div class="inline-block bg-gradient-to-r from-cyan-400/20 to-blue-500/20 border border-cyan-400/30 rounded-full px-4 py-2">
                  <div class="text-cyan-400 font-semibold text-sm">
                    {service.results}
                  </div>
                </div>
              </div>
              
              <!-- Decorative elements -->
              <div class="absolute top-4 right-4 w-8 h-8 border-t-2 border-r-2 border-cyan-400/30 rounded-tr-lg"></div>
              <div class="absolute bottom-4 left-4 w-8 h-8 border-b-2 border-l-2 border-cyan-400/30 rounded-bl-lg"></div>
            </CardContent>
          </Card>
        </div>
      ))}
    </div>
    
  </div>
</section>
