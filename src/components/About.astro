<section class="py-20 bg-transparent">
  
  <div class="relative max-w-6xl mx-auto px-6">
    <div class="text-center mb-16">
      <Badge variant="default" class="gap-2 mb-6">
        <span class="w-2 h-2 bg-primary rounded-full"></span>
        Why Me
