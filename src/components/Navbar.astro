---
const links = [
  { href: "/", label: "Home" },
  { href: "/work", label: "Work" },
  { href: "/services", label: "Services" },
  { href: "/contact", label: "Contact" },
];
---
<header class="sticky top-0 z-50 backdrop-blur bg-white/70 border-b">
  <nav class="mx-auto max-w-6xl px-6 h-14 flex items-center justify-between">
    <a href="/" class="font-semibold">Renata</a>
    <ul class="flex gap-6 text-sm">
      {links.map((l) => (<li><a class="hover:opacity-70" href={l.href}>{l.label}</a></li>))}
    </ul>
  </nav>
</header>
