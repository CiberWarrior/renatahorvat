<script>
  // Cookie Settings button in footer
  document.addEventListener('DOMContentLoaded', function() {
    const footerCookieBtn = document.getElementById('footer-cookie-settings');
    
    if (footerCookieBtn) {
      footerCookieBtn.addEventListener('click', function() {
        // Trigger the cookie settings banner
        const cookieBanner = document.getElementById('cookie-consent-banner');
        const settingsTrigger = document.getElementById('cookie-settings-trigger');
        
        if (cookieBanner && settingsTrigger) {
          cookieBanner.classList.remove('hidden');
          settingsTrigger.classList.add('hidden');
          
          // Scroll to top for better visibility
          window.scrollTo({ top: document.body.scrollHeight, behavior: 'smooth' });
        }
      });
    }
  });
</script>
