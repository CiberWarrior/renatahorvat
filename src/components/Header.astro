---
import Button from './ui/Button.astro';

const navItems = [
  { href: "/", label: "Home" },
  { href: "/services", label: "Services" },
  { href: "/contact", label: "Contact" },
];
---

<header class="fixed top-0 left-0 right-0 z-50 bg-slate-900/80 backdrop-blur-xl border-b border-slate-700/50 overflow-hidden">
  <nav class="max-w-7xl mx-auto px-6 py-4">
    <div class="flex items-center justify-between">
      <!-- Logo -->
      <a href="/" class="flex items-center" onclick="if(typeof window.gtag !== 'undefined') window.gtag('event', 'logo_click', { logo_location: 'header' })">
        <img 
          src="/images/icon.png" 
          alt="Renata Horvat Logo" 
          width="40" 
          height="40"
          class="w-10 h-10"
        />
      </a>
      
      <!-- Desktop Navigation -->
      <ul class="hidden md:flex items-center space-x-8">
        {navItems.map((item) => (
          <li>
            <a 
              href={item.href} 
              class="relative text-white/90 hover:text-white transition-colors duration-300 font-medium text-sm uppercase tracking-wider group focus:outline-none focus:ring-2 focus:ring-cyan-400 focus:ring-offset-2 focus:ring-offset-gray-900 rounded px-2"
              onclick={`if(typeof window.gtag !== 'undefined') window.gtag('event', 'navigation_click', { nav_item: '${item.label}', nav_location: 'desktop_header' })`}
            >
              {item.label}
              <span class="absolute -bottom-1 left-0 w-0 h-0.5 bg-gradient-to-r from-purple-400 to-blue-400 group-hover:w-full transition-all duration-300"></span>
            </a>
          </li>
        ))}
      </ul>
      
      <!-- Mobile menu button -->
      <button 
        class="md:hidden p-2 text-white hover:text-purple-300 transition-colors focus:outline-none focus:ring-2 focus:ring-cyan-400 focus:ring-offset-2 focus:ring-offset-gray-900 rounded" 
        id="mobile-menu-button"
        aria-label="Toggle mobile navigation menu"
        aria-expanded="false"
        aria-controls="mobile-menu"
      >
        <svg class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24" aria-hidden="true">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 6h16M4 12h16M4 18h16"></path>
        </svg>
      </button>
    </div>
    
    <!-- Mobile menu -->
    <div class="md:hidden hidden mt-4 pb-4" id="mobile-menu" role="menu" aria-label="Mobile navigation">
      <div class="bg-white/10 backdrop-blur-xl border border-white/20 rounded-2xl p-6">
      <ul class="space-y-4" role="menubar">
        {navItems.map((item) => (
          <li role="none">
            <a 
              href={item.href} 
              class="block py-3 text-white/90 hover:text-white transition-colors font-medium text-sm uppercase tracking-wider focus:outline-none focus:ring-2 focus:ring-cyan-400 focus:ring-offset-2 focus:ring-offset-gray-800 rounded px-2"
              onclick={`if(typeof window.gtag !== 'undefined') window.gtag('event', 'navigation_click', { nav_item: '${item.label}', nav_location: 'mobile_header' })`}
              role="menuitem"
            >
              {item.label}
            </a>
          </li>
        ))}
      </ul>
      </div>
    </div>
  </nav>
</header>

<script>
      // Mobile menu toggle
      document.addEventListener('DOMContentLoaded', function() {
        const button = document.getElementById('mobile-menu-button');
        const menu = document.getElementById('mobile-menu');
        
        if (button && menu) {
          button.addEventListener('click', function() {
            const isHidden = menu.classList.contains('hidden');
            menu.classList.toggle('hidden');
            button.setAttribute('aria-expanded', isHidden ? 'true' : 'false');
          });
        }
      });
</script>
