---
interface Props { title: string; summary: string; href: string; tags?: string[]; }
const { title, summary, href, tags = [] } = Astro.props as Props;
---
<a href={href} class="block rounded-xl border p-5 hover:shadow-sm transition">
  <h3 class="font-semibold">{title}</h3>
  <p class="mt-2 text-sm text-gray-600">{summary}</p>
  {tags.length ? <ul class="mt-3 flex gap-2 text-xs text-gray-500">{tags.map(t => <li>#{t}</li>)}</ul> : null}
</a>
