---
import Card from './ui/Card.astro';
import CardContent from './ui/CardContent.astro';
import Badge from './ui/Badge.astro';
import Button from './ui/Button.astro';

interface Props { title: string; summary: string; href: string; tags?: string[]; }
const { title, summary, href, tags = [] } = Astro.props as Props;
---

<Card class="bg-slate-700/50 border-slate-600 hover:bg-slate-700/70 transition-colors duration-300 group">
  <CardContent class="p-6">
    <div class="flex items-start space-x-4">
      <!-- Project icon -->
      <div class="w-12 h-12 bg-gradient-to-br from-purple-500 to-blue-500 rounded-xl flex items-center justify-center text-white">
        <svg class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 7v10a2 2 0 002 2h14a2 2 0 002-2V9a2 2 0 00-2-2H5a2 2 0 00-2-2z"></path>
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8 5a2 2 0 012-2h4a2 2 0 012 2v2H8V5z"></path>
        </svg>
      </div>
      
      <div class="flex-1">
        <h3 class="text-xl font-bold text-white mb-2 group-hover:text-purple-300 transition-colors duration-300">
          {title}
        </h3>
        <p class="text-gray-300 mb-4 leading-relaxed">
          {summary}
        </p>
        
        <!-- Tags -->
        {tags.length > 0 && (
          <div class="mb-4">
            <div class="flex flex-wrap gap-2">
              {tags.map((tag) => (
                <Badge variant="secondary" class="text-xs">{tag}</Badge>
              ))}
            </div>
          </div>
        )}
        
        <!-- CTA link -->
        <div class="flex justify-end">
          <Button href={href} variant="ghost" size="sm" class="text-purple-400 hover:text-purple-300">
            View Project
            <svg class="w-4 h-4 ml-1" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 8l4 4m0 0l-4 4m4-4H3"></path>
            </svg>
          </Button>
        </div>
      </div>
    </div>
  </CardContent>
</Card>
